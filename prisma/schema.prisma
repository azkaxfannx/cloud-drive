generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model File {
  id           Int      @id @default(autoincrement())
  filename     String   // nama file di server
  originalName String   @map("original_name") // nama asli file
  filepath     String   // path lengkap file
  filesize     BigInt   // ukuran file dalam bytes
  mimetype     String   // MIME type file
  uploadDate   DateTime @default(now()) @map("upload_date")

  @@map("files")
}